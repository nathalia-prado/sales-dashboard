{
  "name": "sales-dashboard",
  "type": "module",
  "version": "0.2.0",
  "description": "Sales perfomance dashboard",
  "repository": "https://github.com/nathalia-prado/sales-dashboard.git",
  "main": "server/index.ts",
  "author": "Nathalia Prado",
  "license": "MIT",
  "scripts": {
    "start": "node dist/server.js",
    "dev": "run-p dev:client dev:server",
    "dev:all": "run-p dev:server dev:client",
    "dev:server": "tsx watch server/index.ts",
    "dev:client": "vite",
    "knex": "knex --knexfile server/db/knexfile.js",
    "build": "run-s build:client build:server",
    "build:client": "vite build",
    "build:server": "esbuild --packages=external --platform=node --format=esm --outfile=dist/server.js --bundle server/index.ts",
    "test": "vitest",
    "lint": "eslint --ext .js,.jsx,.ts,.tsx .",
    "lint:fix": "eslint . --fix",
    "format": "prettier -w '**/*.{js,jsx,ts,tsx}'"
  },
  "keywords": [
    "fullstack"
  ],
  "eslintConfig": {
    "extends": "@devacademy/eslint-config/react",
    "ignorePatterns": [
      "bundle.js"
    ]
  },
  "dependencies": {
    "express": "^4.17.2",
    "knex": "^2.5.1"
  },
  "devDependencies": {
    "@devacademy/eslint-config": "^1.9.1",
    "@types/express": "^4.17.14",
    "@types/react": "^18.0.28",
    "@types/react-dom": "^18.0.11",
    "@types/superagent": "^4.1.16",
    "@vitejs/plugin-react": "^4.0.4",
    "@vitest/coverage-c8": "^0.30.1",
    "esbuild": "^0.19.0",
    "eslint": "^8.10.0",
    "eslint-plugin-import": "^2.25.4",
    "eslint-plugin-jsx-a11y": "^6.5.1",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-prettier": "^4.0.0",
    "eslint-plugin-promise": "^6.0.0",
    "eslint-plugin-react": "^7.29.4",
    "eslint-plugin-react-hooks": "^4.6.0",
    "npm-run-all": "^4.1.5",
    "prettier": "2.6.1",
    "react": "^18.0.2",
    "react-dom": "^18.2.0",
    "react-router-dom": "^6.11.2",
    "sqlite3": "^5.1.6",
    "superagent": "7.1.1",
    "supertest": "^6.2.2",
    "tsx": "^3.12.7",
    "vite": "^4.4.9",
    "vitest": "^0.34.1"
  },
  "prettier": {
    "semi": false,
    "singleQuote": true
  },
  "browserslist": "> 2%, not dead"
}